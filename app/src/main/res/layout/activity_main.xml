<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">


    <Button
        android:id="@+id/btnOpcionRegistros"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:onClick="OnClick"
        android:text="REGISTRAR PRODUCTO" />

    <Button
        android:id="@+id/btnOpcionRegistrosMascota"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:onClick="OnClick"
        android:text="REGISTRAR MASCOTA"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnOpcionConsultar"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="OnClick"
        android:text="CONSULTAR PRODUCTO" />

    <Button
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="CONSULTAR LISTA USUARIO USANDO SPINNER"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="CONSULTAR LISTA USUARIO USANDO LISTVIEW"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="CONSULTAR LISTA MASCOTAS"
        android:layout_marginTop="30dp"/>


</LinearLayout>