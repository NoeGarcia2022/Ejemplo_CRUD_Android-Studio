<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroProductosActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE PRODUCTOS"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/txtCodigo"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese el codigo"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese la descripcion"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/txtPrecio"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese el precio"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:onClick="onClick"
        android:text="REGISTRAR PRODUCTOS" />


</LinearLayout>